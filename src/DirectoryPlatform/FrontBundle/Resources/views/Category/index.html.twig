{% extends 'FrontBundle::Layout/base.html.twig' %}

{% set title = 'Categories'|trans %}
	
{% block title %}{{ title }}{% endblock %}

{% block content %}
	<div class="container">
		{% include 'FrontBundle::Helper/content_title.html.twig' %}		

		<div class="content">			
			{% if categories|length %}
				<div class="row">
					{% for category in categories %}
						<div class="col-md-4">
							<div class="term">
								<div class="term-name">
									<a href="{{ path('category_detail', {'slug': category.getSlug()})}}">
										{{ category.getName() }}
									</a>
								</div><!-- /.term-name -->

								<div class="term-count">
									({{ category.getListings()|length }})
								</div><!-- /.term-count -->
							</div><!-- /.term -->
						</div><!-- /.col-* -->
					{% endfor %}
				</div><!-- /.row -->

	            <div class="navigation">
	                {{ knp_pagination_render(categories) }}
	            </div><!-- /.navigation -->					
			{% else %}
				{% include 'AppBundle::Helper/empty.html.twig' %}
			{% endif %}			
		</div><!-- /.content -->
	</div><!-- /.container -->
{% endblock %}